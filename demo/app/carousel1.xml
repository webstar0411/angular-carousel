<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" 
    xmlns:ns="nativescript-carousel">
    <Page.actionBar>
        <ActionBar title="Carousel - Static views"></ActionBar>
    </Page.actionBar>

    <StackLayout>
        <Label text="Each slide is defined in the XML." textWrap="true" margin="30,0,10,0"/>
        <Label text="'finite' is set to True" textWrap="true" margin="0,0,20,0" android:visibility="collapsed" />

        <GridLayout margin="20,0,0,0" height="250">
            <ns:Carousel debug="true" height="250" width="100%" color="white" pageChanged="myChangeEvent" pageTapped="mySelectedEvent" indicatorColor="#fff000" finite="true" bounce="false" showIndicator="true" verticalAlignment="top" android:indicatorAnimation="swap">
                <ns:CarouselItem id="slide1" backgroundColor="#b3cde0">
                    <Label text="Slide 1" verticalAlignment="center" horizontalAlignment="center"/>
                </ns:CarouselItem>

                <ns:CarouselItem id="slide2" backgroundColor="#6497b1">
                    <Label text="Slide 2" verticalAlignment="center" horizontalAlignment="center"/>
                </ns:CarouselItem>

                <ns:CarouselItem id="slide3" backgroundColor="#005b96">
                    <Label text="Slide 3" verticalAlignment="center" horizontalAlignment="center"/>
                </ns:CarouselItem>

                <ns:CarouselItem id="slide4" backgroundColor="#03396c">
                    <Label text="Slide 4" verticalAlignment="center" horizontalAlignment="center"/>
                </ns:CarouselItem>
            </ns:Carousel>
        </GridLayout>

        <Label text="Indicator animation type: 'swap'" textWrap="true" ios:visibility="collapsed" margin="10,0,0,0"/>

        <Label text="The Carousel is wrapped in a GridLayout so that the indicators overlay the content. Otherwise it's placed directly under the content." textWrap="true" ios:visibility="collapsed" margin="10,0,0,0"/>

    </StackLayout>
</Page>
